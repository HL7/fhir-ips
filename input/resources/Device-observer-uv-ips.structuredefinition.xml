		</element>
		<element id="Device.manufacturer">
			<path value="Device.manufacturer"/>
			<mustSupport value="true"/>
		</element>
		<element id="Device.modelNumber">
			<path value="Device.modelNumber"/>
			<mustSupport value="true"/>
		</element>
	</differential>
</StructureDefinition>
